{
    "name": "bloom",
    "description" : "Base Level Extension",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Bloom"
    },
    "background": {
        "js": ["background.js"],
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["tabs"]
}